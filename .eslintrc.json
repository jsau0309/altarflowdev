{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }]
  },
  "overrides": [
    {
      "files": [
        "app/api/**/*.ts",
        "app/api/**/*.tsx",
        "lib/actions/**/*.ts",
        "lib/**/*.ts"
      ],
      "excludedFiles": ["**/*.test.ts", "**/*.spec.ts", "**/test*.ts", "scripts/**/*.ts"],
      "rules": {
        "no-console": "error"
      }
    }
  ]
}
