// --- Add Flow Model ---
model Flow {
  id           String    @id @default(cuid())
  name         String    // e.g., "New Visitor Connect", "VBS 2025 Signup"
  type         FlowType  @default(NEW_MEMBER) // Enum for different flow types
  slug         String    @unique // Public URL segment (e.g., /connect/[slug])
  configJson   Json      // Stores form fields, settings, steps etc. specific to this flow
  isEnabled    Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  churchId     String    @db.Uuid
  church       Church    @relation(fields: [churchId], references: [id], onDelete: Cascade) // Cascade delete flows if church is deleted

  submissions  Submission[] // Relation to form submissions for this flow

  @@index([churchId])
  @@index([churchId, slug]) // Index for quick public lookup
}

// --- Add Submission Model ---
model Submission {
  id            String   @id @default(cuid())
  submittedAt   DateTime @default(now())
  formDataJson  Json     // Stores the actual submitted data
  // Optional: Link to Member if identified/created during submission
  memberId      String?  @db.Uuid
  member        Member?  @relation(fields: [memberId], references: [id], onDelete: SetNull) // SetNull if member deleted

  flowId        String
  flow          Flow     @relation(fields: [flowId], references: [id], onDelete: Cascade) // Cascade delete submissions if flow is deleted

  @@index([flowId])
  @@index([memberId])
}















