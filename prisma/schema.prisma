generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// Correctly formatted datasource block
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Reads from prisma/.env or root .env
  directUrl = env("DIRECT_URL") // Reads from prisma/.env or root .env
}

// Optionally add shadowDatabaseUrl for migration safety
// shadowDatabaseUrl = env("SHADOW_DATABASE_URL")

// --- Enums ---

enum Role {
  ADMIN // Typically the license purchaser / main account owner
  STAFF // Invited staff members (up to 3)
}

enum ExpenseStatus {
  PENDING
  APPROVED
  REJECTED
}

enum FlowType {
  NEW_MEMBER
  EVENT_SIGNUP
  SURVEY
  // Add more types later
}

// --- Models ---

// Stores idempotency keys to prevent duplicate operations
model IdempotencyCache {
  key         String   @id @db.VarChar(255) // The idempotency key
  responseData String   @db.Text // The serialized response data
  expiresAt   DateTime // When this cache entry should expire
  
  @@index([expiresAt])
  @@map("idempotency_cache")
}

// Represents a Church organization/tenant
model Church {
  id         String   @id @default(uuid()) @db.Uuid // <-- Add @db.Uuid
  clerkOrgId String?  @unique // Added: Clerk Organization ID (initially optional, then required after sync)
  name       String // Name of the church
  slug       String   @unique // URL-friendly identifier for the church
  address    String? // Added: Physical address of the church
  phone      String? // Added: Primary phone number
  email      String? // Added: Primary contact email
  website    String? // Added: Church website URL
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt // Keep @updatedAt, add @default(now()) for INSERT

  // --- Connect Form Configuration ---
  serviceTimesJson Json? @db.Json
  ministriesJson   Json? @db.Json
  settingsJson     Json? @db.Json

  // --- Relations ---
  // profiles Profile[]  // REMOVED - No longer a direct link from Church to Profile
  expenses  Expense[] // A church has many expenses
  donations Donation[] // A church has many donations
  members   Member[] // A church has many members
  campaigns Campaign[] // A church has many campaigns
  flows     Flow[] // Add back-relation for flows
  donationTypes        DonationType[]        // A church has many donation types
  donationTransactions DonationTransaction[] // A church has many donation transactions
  
  // Stripe Connect account information (one-to-one relation)
  stripeConnectAccount StripeConnectAccount?
}

// Represents the different categories of donations a church can offer
model DonationType {
  id                  String    @id @default(cuid())
  churchId            String    @db.Uuid // Foreign key to Church.id
  name                String    // e.g., "Tithe", "Offering", "Building Fund"
  description         String?
  isRecurringAllowed  Boolean   @default(true) // Can this type be a recurring donation?
  // Consider if you need a defaultAmount or suggestedAmounts
  // isActive            Boolean   @default(true) // For churches to enable/disable types later

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  church              Church    @relation(fields: [churchId], references: [id], onDelete: Cascade)
  donations           DonationTransaction[] // Relation to DonationTransaction model (defined in Step 1.2)

  @@unique([churchId, name]) // Ensure unique type names per church
  @@index([churchId]) // Index for faster lookups by churchId
}


// Represents an individual donation transaction
model DonationTransaction {
  id                      String    @id @default(cuid())
  churchId                String    @db.Uuid // Foreign key to Church.id
  donationTypeId          String    // Foreign key to DonationType.id
  donorClerkId            String?   // If donations are linked to logged-in users (Clerk ID)
  donorName               String?   // If anonymous or guest donations are allowed
  donorEmail              String?   // For receipts, if anonymous or guest
  amount                  Int       // In cents
  currency                String    // e.g., "usd"
  status                  String    // e.g., "pending", "succeeded", "failed", "requires_action"
  paymentMethodType       String?   // e.g., "card", "us_bank_account"
  isRecurring             Boolean   @default(false)
  stripePaymentIntentId   String?   @unique // For one-time payments or initial setup of subscriptions
  stripeSubscriptionId    String?   @unique // For recurring payments
  stripeCustomerId        String?   // Stripe Customer ID, useful for managing payment methods and subscriptions
  
  transactionDate         DateTime  @default(now())
  processedAt             DateTime? // When webhook confirmed success

  church                  Church        @relation(fields: [churchId], references: [id], onDelete: Cascade)
  donationType            DonationType  @relation(fields: [donationTypeId], references: [id], onDelete: Restrict) // Prevent deleting type if donations exist
  // userProfile             UserProfile? @relation(fields: [donorClerkId], references: [clerkId]) // If linking to user profiles

  @@index([churchId])
  @@index([donationTypeId])
  @@index([donorClerkId])
  @@index([stripePaymentIntentId])
  @@index([stripeSubscriptionId])
}

