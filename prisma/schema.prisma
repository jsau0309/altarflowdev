// --- Add Flow Model ---
// Represents a Stripe Connect Express account for a church
model StripeConnectAccount {
  id                      String     @id @default(uuid()) @db.Uuid
  stripeAccountId         String     @unique // The Stripe account ID (e.g., 'acct_123...')
  churchId                String     @unique // Using Clerk organization ID (e.g., 'org_123...')
  church                  Church     @relation(fields: [churchId], references: [clerkOrgId], onDelete: Cascade, onUpdate: Cascade)
  
  // Account status fields
  chargesEnabled         Boolean    @default(false) // Whether charges can be created
  detailsSubmitted       Boolean    @default(false) // Whether account details have been submitted
  payoutsEnabled         Boolean    @default(false) // Whether payouts can be made
  
  // Verification status fields
  verificationStatus     String     @default("unverified") // 'unverified', 'pending', 'verified', 'restricted', 'action_required'
  requirementsCurrentlyDue String[]  @default([]) // Currently due verification requirements
  requirementsEventuallyDue String[] @default([]) // Eventually due verification requirements
  requirementsDisabledReason String?  // Reason why the account is restricted
  tosAcceptanceDate      DateTime?  // When the Stripe terms of service were accepted
  
  // Timestamps
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
  
  // Store additional metadata as JSON
  metadata               Json?      @db.Json // Store any additional Stripe account metadata
  
  // Ensure the churchId has an index for better query performance
  @@index([churchId])
  
  // The @unique constraint on churchId ensures one-to-one relationship
}

model Flow {
  id         String   @id @default(cuid())
  name       String // User-friendly name (e.g., "New Visitor Connect Form")
  type       FlowType @default(NEW_MEMBER)
  slug       String   @unique // URL identifier (e.g., "new-visitor-connect")
  configJson Json // Stores { serviceTimes: [], ministries: [], settings: { enablePrayer: true, ... } }
  isEnabled  Boolean  @default(true) // Allows disabling public access
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  churchId String @db.Uuid
  church   Church @relation(fields: [churchId], references: [id], onDelete: Cascade)

  submissions Submission[] // Relation to submissions

  @@index([churchId])
  @@index([churchId, slug])
  @@unique([churchId, type], name: "church_flow_type_unique") // Add unique constraint
}

// --- Add Submission Model ---
model Submission {
  id           String   @id @default(cuid())
  submittedAt  DateTime @default(now())
  formDataJson Json // Submitted field data { firstName: "...", email: "...", ... }

  // Optional: Link to Member if one is created/found from this submission
  memberId String? @db.Uuid
  member   Member? @relation(fields: [memberId], references: [id], onDelete: SetNull)

  flowId String // Link submission to the specific flow
  flow   Flow   @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@index([flowId])
  @@index([memberId])
}
